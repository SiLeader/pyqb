[Unit]
Description=PyQB ${TARGET} incubator process.

[Service]
Type=simple

ExecStop=/bin/kill -INT $MAINPID
ExecStart=/usr/bin/python3 ${PYQB_LOCATION} --script=${COMMAND_SCRIPT_LOCATION} --socket=/tmp/${SOCKET_NAME}.sock
ExecReload=/bin/kill -INT $MAINPID && /usr/bin/python3 ${PYQB_LOCATION} --script=${COMMAND_SCRIPT_LOCATION} --socket=/tmp/${SOCKET_NAME}.sock

KillMode=control-group
Restart=always
Restart=on-failure

User=kaihatsu
Group=www-data

[Install]
WantedBy=multi-user.target
